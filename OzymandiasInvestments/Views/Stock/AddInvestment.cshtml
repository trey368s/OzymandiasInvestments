@{
    ViewData["Title"] = "Add Investment";
}
<form asp-controller="Stock" asp-action="AddInvestment" method="post">
    <div class="form-group">
        <label class="form-label mt-4">Price</label>
        <div class="form-group">
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="number" step='0.01' class="form-control" name="OpenPrice" placeholder="0.00">
            </div>
        </div>
        <label class="form-label mt-4">Symbol</label>
        <div class="form-group">
            <div class="input-group mb-3">
                <span class="input-group-text">Ticker</span>
                <input type="text" class="form-control" name="symbol" placeholder="MSFT">
            </div>
        </div>
        <label class="form-label mt-4">Shares</label>
        <div class="form-group">
            <div class="input-group mb-3">
                <span class="input-group-text">Quantity</span>
                <input type="number" step='0.01' class="form-control" name="shares" placeholder="0.00">
            </div>
        </div>
        <label class="form-label mt-4">Date Time</label>
        <div class="form-group">
            <div class="input-group mb-3">
                <input type="datetime-local" class="form-control" name="datetime" placeholder="0">
            </div>
        </div>
        <br>
        <button class="btn btn-secondary" type="submit" id="button-addon2">Create</button>
    </div>
</form>
