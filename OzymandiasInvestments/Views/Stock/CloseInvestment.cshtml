@model Investments
<br>
<h1>Close Investment</h1>

<form asp-action="CloseInvestment" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <label class="form-label mt-4">Close Price</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="number" step='0.01' class="form-control" name="closePrice" placeholder="0.00">
        </div>
    </div>
    <label class="form-label mt-4">Close Date Time</label>
    <div class="form-group">
        <div class="input-group mb-3">
            <input type="datetime-local" class="form-control" name="closeTime">
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Close</button>
</form>